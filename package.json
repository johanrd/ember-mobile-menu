{
  "version": "5.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nickschot/ember-mobile-menu"
  },
  "workspaces": [
    "ember-mobile-menu",
    "docs",
    "test-app"
  ],
  "scripts": {
    "build": "pnpm --filter ember-mobile-menu build",
    "changelog": "npx lerna-changelog --from=v0.1.0-alpha.5 > CHANGELOG.md",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "release": "release-it",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter ember-mobile-menu start --no-watch.clearScreen",
    "start:docs": "pnpm --filter docs start",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "5.0.0",
    "concurrently": "8.2.2",
    "release-it": "15.11.0",
    "release-it-yarn-workspaces": "github:refi93/release-it-yarn-workspaces#refi93/esm-support",
    "release-plan": "^0.7.0"
  },
  "volta": {
    "node": "18.19.1",
    "pnpm": "8.15.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "overrides": {
      "@babel/parser": "7.17.3",
      "@octokit/rest": "^19.0.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm install",
      "after:release": "cd docs && ember deploy production"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "release-it-yarn-workspaces": {
        "publish": true,
        "workspaces": [
          "ember-mobile-menu"
        ]
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
